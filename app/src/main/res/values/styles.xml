<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="CustomDboxTitle" parent="@android:style/Theme.DeviceDefault.Dialog.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:gravity">center_horizontal</item>
        <item name="android:windowTitleStyle">@style/AlertDialog.AppCompat</item>

    </style>

    <style name="buttonStyleActive" parent="@android:style/Theme.DeviceDefault.Dialog.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@android:drawable/button_onoff_indicator_on</item>

    </style>

    <style name="buttonStyleInactive" parent="@android:style/Theme.DeviceDefault.Dialog.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@android:drawable/button_onoff_indicator_off</item>

    </style>

</resources>
